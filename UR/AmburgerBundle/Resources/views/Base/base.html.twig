<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Datenbank Amburger{% endblock %}</title>
        
    {% block stylesheets %}
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/loader.min.css')}}" />
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/jquery-ui-1.10.2.custom.min.css')}}" />
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/foundation.min.css')}}" />
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/font-awesome.min.css')}}" />
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/util.css')}}" />
        <script src="{{asset('bundles/amburger/js/lib/vendor/modernizr.js')}}"></script>
    {% endblock %}
    </head>
    <body>
        {% block fullbody %}

        {% endblock %}
    {% block javascripts %}
        <script src="{{asset('bundles/amburger/js/lib/vendor/jquery.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/lib/vendor/jquery-ui-1.10.2.custom.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/lib/vendor/loader.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/lib/foundation.min.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/lib/vendor/underscore-min.js')}}"></script>
        <script>
            $(document).foundation();
        </script>
        
        <script src="{{asset('bundles/amburger/js/src/util/DateReferenceTransformer.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/src/util/Loader.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/src/util/Collapsible.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/src/util/MessageHelper.js')}}"></script>
    {% endblock %}
</body>

    <div id="dialogs">    
        {% block dialogs %}
            <div id="dialog-error" title="Fehler!">
                <p><span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span><span class="message"></span></p>
            </div>
            
            <div id="dialog-info" title="Information">
                <p><span class="ui-icon ui-icon-info" style="float:left; margin:12px 12px 20px 0;"></span><span class="message"></span></p>
            </div>
            
            <div id="dialog-yes-no" title="">
                <p><span class="ui-icon ui-icon-info" style="float:left; margin:12px 12px 20px 0;"></span><span class="message"></span></p>
            </div>
        {% endblock %}
    </div>
    
    <div id="templates">    
        {% block templates %}
        {% endblock %}
    </div>
    
    <div id="loaders">
        <!-- the given structure with empty loaders is necessary for the loader -->
        <div class="loader-inner ball-spin-fade-loader">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <div id="loader-background">
    </div>
</html>