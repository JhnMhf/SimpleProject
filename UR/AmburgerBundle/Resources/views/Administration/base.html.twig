{% extends "AmburgerBundle:Base:base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('bundles/amburger/css/admin.css')}}" />
{% endblock %}

{% block fullbody %}
    <header>
        <div id="header" class="center">
            {% block header %}
                <h1>Korrekturoberfl√§che der Erik-Amburger-Datenbank</h1>
            {% endblock %}
        </div>
        {% if logged_in %}
            <div class="row" id="user-controls">
                 <div class="large-1 columns center">
                    <i id="back" class="fa fa-arrow-left fa-2x" aria-hidden="true"></i>
                </div>
                 <div class="large-10 columns center">

                </div>
                 <div class="large-1 columns center">
                    <i id="user-settings" class="fa fa-cog fa-2x" aria-hidden="true"></i> <i id="logout" class="fa fa-sign-out fa-2x" aria-hidden="true"></i>
                </div>
            </div>
        {% endif %}
        {% block navigation %}

        {% endblock %}
    </header>

    <div id="body">
        {% block body %}

        {% endblock %}
    </div>

    <div class="footer-placeholder"></div>
    <footer id="footer">
        {% block footer %}
            <h3>&copy; 2016 IOS Regensburg</h3>
        {% endblock %}
    </footer>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('bundles/amburger/js/src/util/User.js')}}"></script>


    {# As last init the Start #}
    <script>
        User.init();
    </script>

{% endblock %}