<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}TOOLNAME{% endblock %}</title>
        
    {% block stylesheets %}
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/loader.min.css')}}" />
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/jquery-ui.css')}}" />
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/foundation.min.css')}}" />
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/visualization.css')}}" />
        <link rel="stylesheet" href="{{asset('bundles/amburger/css/font-awesome.min.css')}}" />
        <script src="{{asset('bundles/amburger/js/lib/vendor/modernizr.js')}}"></script>
    {% endblock %}
    </head>
    <body>
        
         
        <header>
            <div class="row" id="header">
                <div class="large-12 columns">
                    <div class="large-12 columns center">
                        {% block header %}
                        <h1>Die Erik-Amburger-Datenbank</h1>
                        {% endblock %}
                    </div>
                </div>
            </div>
                    
            {% block navigation %}
                
            {% endblock %}
        </header>
         
         <div id="body">
            {% block body %}
      
            {% endblock %}
        </div>

        
        <footer id="footer">
            
        </footer>

    {% block javascripts %}
        <script src="{{asset('bundles/amburger/js/lib/vendor/jquery.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/lib/vendor/jquery-ui.min.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/lib/vendor/loader.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/lib/foundation.min.js')}}"></script>
        <script src="{{asset('bundles/amburger/js/lib/vendor/underscore-min.js')}}"></script>
        <script>
            $(document).foundation();
        </script>
        
        <script src="{{asset('bundles/amburger/js/src/util/DateReferenceTransformer.js')}}"></script>
    {% endblock %}
</body>

    <div id="dialogs">    
        {% block dialogs %}
        {% endblock %}
    </div>
    
    <div id="templates">    
        {% block templates %}
        {% endblock %}
    </div>
    
    <div id="loaders">
        <!-- the given structure with empty loaders is necessary for the loader -->
        <div class="loader-inner ball-spin-fade-loader">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <div id="loader-background">
    </div>
</html>
